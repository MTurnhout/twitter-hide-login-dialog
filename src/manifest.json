{
    "manifest_version": 3,
    "name": "Twitter Hide Login Pop-up",
    "version": "1.1",
    "description": "An add-on that hides the login pop-up on Twitter.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["activeTab", "webNavigation", "scripting"],
    "host_permissions": ["https://twitter.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "homepage_url": "https://github.com/MTurnhout/twitter-hide-login-popup"
}