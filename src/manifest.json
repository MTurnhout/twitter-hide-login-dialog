{
    "manifest_version": 3,
    "name": "Twitter Hide Login Dialog",
    "version": "1.5",
    "description": "An add-on that hides the login dialog on Twitter.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "js": ["extension.js"],
            "matches": ["https://twitter.com/*"]
        }
    ],
    "homepage_url": "https://github.com/MTurnhout/twitter-hide-login-dialog"
}
